# Editor configuration for Herizon
root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.java]
indent_size = 4

[*.{cmd,bat}]
charset = utf-8-bom
end_of_line = crlf
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
